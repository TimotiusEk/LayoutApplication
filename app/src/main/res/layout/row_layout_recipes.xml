<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <ImageView
        android:id="@+id/food_bg"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        android:src="@drawable/p6" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="#B3FFFFFF"
        android:padding="10dp"
        android:layout_alignBottom="@+id/food_bg"
        android:layout_alignParentStart="true">
        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@color/bg_screen1"
            android:id="@+id/profile_pic"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/strawberry_cereals"
            android:textSize="20sp"
            android:layout_toEndOf="@+id/profile_pic"
            android:id="@+id/food_name"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lunch"
            android:textSize="14sp"
            android:textColor="#979da8"
            android:layout_toEndOf="@+id/profile_pic"
            android:layout_below="@+id/food_name"
            android:layout_marginTop="5dp"
            android:id="@+id/food_type"/>
        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:src="@drawable/heart_icon"
            android:layout_alignParentBottom="true"
            android:layout_toLeftOf="@+id/likes_number"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="98"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:id="@+id/likes_number"
            android:layout_marginStart="5dp"
            android:textColor="#979da8"
            />
    </RelativeLayout>


</RelativeLayout>