<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.google.layoutapplication.ExploreFragment">

            <!-- TODO: Update blank fragment layout -->
            <ImageView
                android:id="@+id/food_bg_recipes32"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:layout_alignParentTop="true"
                android:adjustViewBounds="true"
                android:scaleType="fitXY"
                android:src="@drawable/p10" />



            <View
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:background="#73000000" />

            <ImageView
                android:id="@+id/category_icon_bg_recipes32"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="120dp"
                android:src="@drawable/circle"
                android:tint="@color/colorPrimary" />

            <ImageView
                android:id="@+id/category_icon_recipes32"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="120dp"
                android:padding="20dp"
                android:src="@drawable/ic_access_time_white_18dp" />


            <android.support.v7.widget.CardView
                android:id="@+id/first_cardview_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/category_icon_recipes32"
                android:layout_marginEnd="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="60dp">

                <LinearLayout
                    android:id="@+id/first_cardview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/category_name_recipes32"
                    android:layout_centerHorizontal="true"
                    android:background="@color/colorPrimary"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:id="@+id/headline_recipes32"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Healthy Food"
                        android:textColor="@android:color/white"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/food_description_recipes32"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="Sed ut perspiciatis unde omnis iste natus error sit voluptatem accusantium doloremque laudantium."
                        android:textColor="@android:color/white"
                        android:textSize="15sp" />
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="500dp"
                android:layout_below="@+id/first_cardview_layout"
                android:layout_marginEnd="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp">

            </android.support.v7.widget.CardView>
</RelativeLayout>
