<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp"
    >
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:src="@drawable/p1"
        android:scaleType="fitXY"
        android:id="@+id/food_bg_2"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:background="#73000000"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/white"
        android:text="Curabitur lobor."
        android:id="@+id/food_name_2"
        android:textSize="20sp"
        android:padding="15dp"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_access_time_white_18dp"
        android:layout_alignBottom="@+id/food_bg_2"
        android:layout_marginStart="15dp"
        android:layout_marginBottom="15dp"
        android:id="@+id/ic_time"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/white"
        android:text="6 minutes"
        android:id="@+id/cook_duration"
        android:layout_alignBottom="@+id/food_bg_2"
        android:layout_toEndOf="@+id/ic_time"
        android:layout_marginBottom="15dp"
        android:layout_marginStart="10dp"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TRY"
        android:textColor="@android:color/white"
        android:background="#38c93b"
        android:layout_alignParentEnd="true"
        android:layout_alignBottom="@+id/food_bg_2"
        android:layout_margin="25dp"
        />


</RelativeLayout>